&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    !WFN_RESTART_FILE_NAME Si_QD_xtb-RESTART.wfn

    &XC
      !&XC_FUNCTIONAL PBE
      !&END XC_FUNCTIONAL
 
      !&XC_FUNCTIONAL
      !  &GGA_X_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !  &GGA_C_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !&END 

      &XC_FUNCTIONAL
        &BEEF .TRUE.
        &END
      &END

    &END XC

    &PRINT
    &MULLIKEN OFF
      &END
      &HIRSHFELD OFF
      &END
      &MO ON
        FILENAME adamantane
        EIGENVECTORS F
        EIGENVALUES F
        NDIGITS 8
      &END
      &PDOS
        APPEND T
        COMPONENTS T
        FILENAME adamantane
      &END
      &MO_MOLDEN ON
        FILENAME
        NDIGITS 8
        GTO_KIND SPHERICAL
      &END
      &MO_CUBES
        NHOMO 2
        NLUMO 2
        STRIDE 3 3 3
        WRITE_CUBE T
      &END
    &END PRINT
 

    &QS
      METHOD GPW

!      &DISTRIBUTION
!        BASIC_OPTIMIZATION .FALSE.
!        BASIC_SPATIAL_OPTIMIZATION .TRUE.
!      &END
    &END QS

    &POISSON
      POISSON_SOLVER PERIODIC
      PERIODIC XYZ
    &END

    &MGRID
      CUTOFF 300
      NGRIDS 12
    &END

    &SCF
      &DIAGONALIZATION ON
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.3
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
      SCF_GUESS ATOMIC 
      EPS_SCF 1.e-6
      ADDED_MOS 30
!      &OT
!         PRECONDITIONER FULL_SINGLE_INVERSE
!         MINIMIZER DIIS
!      &END
!      &OUTER_SCF
!         MAX_SCF  30
!         EPS_SCF 1.e-8
!      &END
      MAX_SCF  30
    &END SCF
  &END DFT

  &SUBSYS
    &CELL
      ABC 15.0687999999999995  20.0000000000000000  8.6999999999999993
      PERIODIC  XZ 
    &END CELL


    &TOPOLOGY
      COORD_FILE_NAME BCN-V1_geo_optimized.xyz
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES T
      &END CENTER_COORDINATES
      ! Only in case you use cif file
      !&GENERATE
      !  REORDER T
      !&END
    &END

    &KIND  B
      BASIS_SET DZVP-MOLOPT-SR-GTH 
      POTENTIAL GTH-PBE-q3 
    &END KIND
    &KIND C
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q4
    &END KIND

    &KIND N
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

