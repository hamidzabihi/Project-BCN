&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    !WFN_RESTART_FILE_NAME BCN-RESTART.wfn

    &XC
      !&XC_FUNCTIONAL PBE
      !&END XC_FUNCTIONAL
 
      !&XC_FUNCTIONAL
      !  &GGA_X_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !  &GGA_C_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !&END 

      &XC_FUNCTIONAL
        &BEEF .TRUE.
        &END
      &END

   &END XC

 

    &QS
      METHOD GPW

      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END
    &END QS

    &POISSON
      POISSON_SOLVER PERIODIC
      PERIODIC XYZ
    &END

    &SCF
      SCF_GUESS ATOMIC 
      EPS_SCF 1.e-6
      !ADDED_MOS 50
      &OT
         PRECONDITIONER FULL_SINGLE_INVERSE
         MINIMIZER DIIS
      &END
!      &OUTER_SCF
!         MAX_SCF  30
!         EPS_SCF 1.e-8
!      &END
      MAX_SCF  30
    &END SCF
  &END DFT

  &SUBSYS
    &CELL
      ABC 15.0687999999999995  20.0000000000000000  8.6999999999999993
      PERIODIC  XZ 
    &END CELL


    &TOPOLOGY
      COORD_FILE_NAME BCN_v1_geo_optimized.xyz 
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES T
      &END
    &END


    &KIND  B
      BASIS_SET DZVP-MOLOPT-SR-GTH 
      POTENTIAL GTH-PBE-q3 
    &END KIND
    &KIND C
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q4
    &END KIND

    &KIND N
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q5
    &END KIND

   &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT BCN_V1-MD
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 3000
    TIMESTEP 1
    TEMPERATURE 300.0
   &THERMOSTAT
     REGION GLOBAL
     TYPE CSVR
	 &CSVR
	   TIMECON 15
	 &END
   &END THERMOSTAT
  &END MD

  &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY

   &VELOCITIES ON
   &END VELOCITIES

   &FORCES ON
   &END FORCES   

   &RESTART_HISTORY
     &EACH
       MD 50
     &END EACH
   &END RESTART_HISTORY

   &RESTART
     BACKUP_COPIES 1
     &EACH
       MD 50
     &END EACH
   &END RESTART

  &END PRINT

&END MOTION

